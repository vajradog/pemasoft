<div class="top">
  <div class="row">
  <div class="small-12 large-3 medium-3 columns show-for-large-up">
   <div class="logo">
   <%= link_to image_tag("http://s24.postimg.org/7f6ak195h/pemasoft_logo.png"), root_path%>
   </div> <!-- Change the logo. I've used free image hosting service at http://postimg.org/ -->

</div>

<div class="small-12 large-9 medium-9 columns show-for-large-up">

<!--  NAVIGATION MENU AREA -->
    <nav class="desktop-menu">
     <ul class="sf-menu">
         <li><%= link_to 'Home', root_path%></li>
        
         <% Page.header.each do |page| %>
          <li><%= link_to page.name, page_path(page) %> </li>
        <% end %>
         
         <% if user_signed_in? %>
         <li><%= link_to current_user.email, root_path %>
             <ul>
                <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
             </ul>
          </li>
          <% else %>
          <li><%= link_to "Sign up", new_user_registration_path, :data => { :no_turbolink => true } %></li>
          <li><%= link_to "Login", new_user_session_path, :data => { :no_turbolink => true } %></li>
          <%end %>
          
    </ul>
  </nav>
  </div>
  </div>
  </div>

