<div class="row">   
  <div class="large-12 columns"> 

<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Permalink</th>
      <th>Navigation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.permalink %></td>
        <td><%= page.nav %></td>
        
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page), :data => { :no_turbolink => true } %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Page', new_page_path, :data => { :no_turbolink => true } %>
</div></div>